<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewMovieDetails"
        android:orientation="vertical"
        android:weightSum="1"
        >

    <ImageView
            android:src="@drawable/circlepicture"
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="0.025"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title:"
            android:textSize="14sp"
            android:layout_weight="0.025"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleinfo"
            android:layout_weight="0.025"
            android:textSize="24sp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Overview:"
            android:layout_weight="0.025"
            android:textSize="14sp"/>


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descript"
            android:layout_weight="0.025"
            android:textSize="24sp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Review:"
            android:layout_weight="0.025"
            android:textSize="14sp"/>

    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/RatingBar" android:numStars="5"
            android:visibility="gone" android:clickable="false"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Review yet."
            android:layout_weight="0.025"
            android:textSize="24sp"
            android:id="@+id/NoReviewText"
            />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/YesReviewText" android:textSize="24sp"
            android:text="Long hold to add a review\n"/>



    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Language:"
            android:layout_weight="0.025"
            android:textSize="14sp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lang"
            android:textSize="24sp"
            android:layout_weight="0.025"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Release Date"
            android:textSize="14sp"
            android:layout_weight="0.025"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/releasedate"
            android:layout_weight="0.025"
            android:textSize="24sp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suitable for children below 13:"
            android:layout_weight="0.025"
            android:textSize="14sp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SuitChild"
            android:layout_weight="0.025"
            android:textSize="24sp"/>
</LinearLayout>